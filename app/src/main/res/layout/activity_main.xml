<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#BFE5E4"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="@font/sanchez_regular"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Email:"
        android:fontFamily="@font/cormorant_garamond_bold"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:fontFamily="@font/cormorant_garamond_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:inputType="textPassword"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="@font/cormorant_garamond_bold"
        android:background="#1DA6A3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/new_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New user?"
            android:fontFamily="@font/cormorant_garamond_bolditalic"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"/>
        <TextView
        android:id="@+id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot password"
            android:textSize="18dp"
            android:fontFamily="@font/cormorant_garamond_bolditalic"
        android:layout_marginTop="30dp"
            android:textColor="#1DA6A3"
       android:layout_marginLeft="10dp"/>


    </LinearLayout>




</LinearLayout>